# ==============================
# CODEIGNITER 4 PROJECT (.gitignore)
# ==============================

# ----------------------------------------------------------------------
# CORE FOLDERS TO IGNORE
# ----------------------------------------------------------------------
# /vendor/              # Composer dependencies
/node_modules/        # NodeJS packages
/.idea/               # JetBrains IDE metadata
/.vscode/             # VSCode project configs
/.fleet/              # JetBrains Fleet
/.history/            # VSCode local history
/.DS_Store            # macOS file metadata
Thumbs.db             # Windows thumbnail cache
# vendor/*
node_modules
node_modules/**

# ----------------------------------------------------------------------
# SYSTEM & ENVIRONMENT FILES
# ----------------------------------------------------------------------
.env
.phpunit.result.cache
.php-cs-fixer.cache
composer.lock.bak
package-lock.json.bak
error_log
npm-debug.log*
yarn-error.log*

# ----------------------------------------------------------------------
# WRITABLE FOLDER
# ----------------------------------------------------------------------
/writable/cache/*
/writable/logs/*
/writable/session/*
/writable/uploads/*
/writable/debugbar/*
/writable/temp/*
!writable/index.html   # keep index.html placeholders
!.gitkeep              # keep empty folder tracking files

# ----------------------------------------------------------------------
# PUBLIC FOLDER
# ----------------------------------------------------------------------
/public/uploads/*
/public/assets/tmp/*
/public/data/*
!/public/index.php
!/public/.htaccess
# Pastikan folder data publik tidak dihapus Git
!public/data/
!public/data/**
public/data/*
public/error_log

# ----------------------------------------------------------------------
# LARAGON / LOCAL TOOLS
# ----------------------------------------------------------------------
# /vendor.zip
/laragon
*.sql
*.bak
*.tar
*.zip
*.7z
*.rar

# ----------------------------------------------------------------------
# TEMPORARY & DEV FILES
# ----------------------------------------------------------------------
/tmp/*
/temp/*
/to_del/*
/backup/*
*.tmp
*.log
*.swp
*.swo
*.orig

# ----------------------------------------------------------------------
# TESTS & LOCAL CONFIG
# ----------------------------------------------------------------------
/tests/Reports/
/tests/coverage/
/coverage/
phpunit.xml
phpunit.xml.dist

# ----------------------------------------------------------------------
# CI4 SYSTEM CLONES
# ----------------------------------------------------------------------
/system_old/
/public_old/
/app_old/
/env_old
